div
  h4 {{$t('post_index.list_posts')}}
  table
    tr
      th(v-on:click="orderByTitle") {{$t('post_index.title')}}
      th(v-on:click="orderByDate") {{$t('post_index.creation_date')}}
      th
      th
    tr(v-for="post in posts")
      td
        a(v-bind:href = "'#/post/' + post.id") {{post.title}}
      td {{post.creation}}
      td
      td
        a(v-bind:href = "'#/editpost/' + post.id") {{$t('post_index.edit')}}
        button(id="show-modal" @click="showModal = true") {{$t('post_index.delete')}}
        ModalComponent(v-if="showModal" @close="showModal = false" :title="$t('post_index.delete')" :message="$t('post_index.sure')" @ok="DeletePost(post.id)")
      
  a(href="#/newpost")
      button(type="button") {{$t('post_index.create_post')}}