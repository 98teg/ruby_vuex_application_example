div(class="modal-mask")
  div(class="modal-wrapper")
    div(class="modal-container")
      div(class="modal-header")
        h3 {{title}}
      div(class="modal-body") {{message}}
      button(class="modal-default-button" v-on:click="$emit('ok')" @click="$emit('close')") {{$t('modal.ok')}}
      button(class="modal-default-button" @click="$emit('close')") {{$t('modal.cancel')}}
